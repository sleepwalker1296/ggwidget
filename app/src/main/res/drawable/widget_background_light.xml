<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Тень -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Полупрозрачная чёрная тень -->
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Основной фон -->
    <item android:left="4dp" android:top="4dp"> <!-- Смещаем фон, создавая эффект тени -->
        <shape android:shape="rectangle">
            <solid android:color="@color/lightBackground"/> <!-- ✅ Светлый фон -->
            <corners android:radius="16dp"/>

            <!-- Обводка -->
            <stroke android:width="2dp" android:color="@color/lightStrokeColor"/>
        </shape>
    </item>

</layer-list>
