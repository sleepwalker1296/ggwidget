<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Светлая тема -->
    <style name="Theme_GGWidget_Light" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="textColorPrimary">@color/black</item>
    </style>

    <!-- Тёмная тема (по умолчанию) -->
    <style name="Theme_GGWidget_Dark" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
        <item name="textColorPrimary">@color/white</item>
    </style>

</resources>
