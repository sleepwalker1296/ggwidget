<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Тёмная тема -->
    <style name="Theme.GGWidget.Dark" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/backgroundDark</item>
        <item name="colorPrimaryVariant">@color/backgroundDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowBackground">@color/backgroundDark</item>
        <item name="android:statusBarColor">@color/backgroundDark</item> <!-- Исправляет верхнюю часть -->
        <item name="android:navigationBarColor">@color/backgroundDark</item> <!-- Исправляет белый низ -->
    </style>

    <!-- Светлая тема -->
        <style name="Theme.GGWidget.Light" parent="Theme.Material3.Light.NoActionBar">
            <item name="colorPrimary">@color/backgroundDark</item>
            <item name="colorPrimaryVariant">@color/backgroundDark</item>
            <item name="colorOnPrimary">@color/white</item>
            <item name="android:windowBackground">@color/backgroundLight</item>
            <item name="android:statusBarColor">@color/backgroundLight</item> <!-- Верхний статус-бар -->
            <item name="android:navigationBarColor">@color/backgroundLight</item> <!-- Нижняя панель -->
        </style>
</resources>
