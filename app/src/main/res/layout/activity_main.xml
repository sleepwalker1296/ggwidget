                    android:textColor="@color/secondaryText"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/token_change_1h"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+0.00%"
